<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="simulation" type="Nerdle.AutoConfig.Section, Nerdle.AutoConfig"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <simulation iterations="10000" parallelism="5" >
    <component baseFailureRate="0.1" operationDelay="00:00:00.200" />
    <rollingWindow windowLength="00:00:02" failureTriggerPercentage="0.5" minimumSampleSize="5" failFor="00:00:10" />
  </simulation>
    
  <log4net>
    <appender name="Default" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="White, HighIntensity"/>
        <backColor value="Red"/>
      </mapping>
      <mapping>
        <level value="WARN"/>
        <foreColor value="White, HighIntensity"/>
        <backColor value="Purple"/>
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="White, HighIntensity"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %message%newline"/>
      </layout>
    </appender>
    <appender name="Primary" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="White, HighIntensity"/>
        <backColor value="Green"/>
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="Green"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %message%newline"/>
      </layout>
    </appender>
    <appender name="Secondary" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="White, HighIntensity"/>
        <backColor value="Yellow"/>
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="Yellow"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %message%newline"/>
      </layout>
    </appender>
    <appender name="Tertiary" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="White, HighIntensity"/>
        <backColor value="Cyan"/>
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="Cyan"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="INFO"/>
    </root>
    <logger name="Default">
      <level value="INFO"/>
      <appender-ref ref="Default"/>
    </logger>
    <logger name="Primary">
      <level value="INFO"/>
      <appender-ref ref="Primary"/>
    </logger>
    <logger name="Secondary">
      <level value="INFO"/>
      <appender-ref ref="Secondary"/>
    </logger>
    <logger name="Tertiary">
      <level value="INFO"/>
      <appender-ref ref="Tertiary"/>
    </logger>
  </log4net>
    
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
</configuration>